@model WioShop.Models.Classes.Cart
@{
    ViewBag.Title = "Index";
}

<div class="container pb-5">
    <div class="row">
        <div class="col-md-12">
            <h2>Sepet</h2>
            <hr />
            @if (Model.CartLines.Count > 0)
            {
                <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Ürün Sayısı</th>
                                <th>Ürün Adı</th>
                                <th>Fiyat</th>
                                <th>Toplam Tutar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.CartLines)
                            {
                                <tr>
                                    <td>
                                        <img src="~/Upload/@item.Product.ProductImg" width="50" />
                                    </td>
                                    <td>
                                        @item.Number
                                    </td>
                                    <td>
                                        @item.Product.ProductName
                                    </td>
                                    <td>
                                        @item.Product.ProductPrice
                                    </td>
                                    <td>
                                        @((item.Product.ProductPrice*item.Number).ToString("c"))
                                    </td>
                                    <td>
                                        @using (Html.BeginForm("UrunSil", "Cart"))
                                        {
                                            @Html.Hidden("Id", item.Product.Id)
                                            <button type="submit" class="btn btn-danger">
                                                <i class="bi bi-trash-fill"></i>
                                                Sil
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5"></td>
                                <td>
                                    @Model.Tutar().ToString("c")
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                    <div class="text-center">

                        <a href="/Home/List" class=" btn btn-primary">
                            <i class="fa fa-angle-double-left" aria-hidden="true"></i>
                            Alışverişe Devam Et
                        </a>
                        <a href="/Cart/Checkout" class=" btn btn-primary">
                            <i class="fa fa-check " aria-hidden="true"></i>
                            Siparişi Tamamla
                        </a>
                    </div>
                    }
                    else
                    {
                    <div class=" alert alert-warning" role="alert">
                        <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                        Alışveriş Sepetinizde Ürün Bulunmamaktır.
                    </div>

                    }
            </div>   
</div>
</div>
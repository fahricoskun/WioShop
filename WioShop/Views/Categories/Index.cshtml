@model IEnumerable<WioShop.Models.Classes.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container pb-5 mt-4">
    <h2>Kategoriler</h2>
    <hr />

    <p>
        @Html.ActionLink("Yeni Kategori", "Create", null, new { @class = "btn btn-outline-info btn-lg px-4 me-sm-3 fw-bold" })
    </p>
    <table class="table table-bordered table-striped table-hover table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th style="width: 20%"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new {@class= "btn btn-outline-info btn-sm px-4 me-sm-3 fw-bold" }) |
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }

    </table>
</div>
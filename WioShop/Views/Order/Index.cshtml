@model IEnumerable<WioShop.Models.Classes.AdminOrderModel> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminFooter.cshtml";
}


<div class="container">
    <h2 class="mt-5" style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;">Siparişler</h2>
    <hr />

    <table class="table table-bordered table-striped table-hover table-light mt-4">
        <thead>
            <tr>
                <th>Sipariş Kimliği</th>
                <th>Sipariş Numarası</th>
                <th>Sipariş Tarihi</th>
                <th>Sipariş Durumu</th>
                <th>Toplam</th>
                <th>Sipariş Sayısı</th>
                <td></td>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.OrderNumber</td>
                    <td>@item.OrderDate</td>
                    <td>@item.OrderState</td>
                    <td>@item.Count</td>
                    <td>@item.Tutar</td>
                    <td>
                        @Html.ActionLink("Detaylar", "Details", new { id = @item.Id }, new { @class = "btn btn-outline-info btn-sm me-sm-3 fw-bold" })
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
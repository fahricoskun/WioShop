@model IEnumerable<WioShop.Models.Classes.UserOrderModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container-md">
    <div class="row">
        <div class="col-md-12">

            <h2 style="margin-top:50px;">Sipariş Bilgileriniz</h2>
            <hr />
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Sipariş Numarası</th>
                        <th>Sipariş Tarihi</th>
                        <th>Toplam</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.OrderNumber</td>
                            <td>@item.OrderDate.ToShortDateString()</td>
                            <td>
                                <i class="fa fa-try" aria-hidden="true"></i>
                                @item.Tutar
                            </td>
                            <td>@item.OrderState</td>
                            <td>
                                @Html.ActionLink("Detaylar", "Details", new { id = @item.Id }, new { @class = "btn btn-outline-info btn-md me-sm-3 fw-bold" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
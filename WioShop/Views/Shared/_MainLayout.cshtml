
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WioShop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

    <!-- CSS -->
    @Styles.Render("~/Content/style.css")
    @Styles.Render("~/Content/css")

    <!-- Javascript -->
    @Scripts.Render("~/Scripts/script")
</head>
<body>
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="~/Home/Index">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="#">Kargo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/Home/Products">Ürünler</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/Home/About">Hakkımızda</a>
                    </li>
                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-warning" type="submit">Search</button>
                    <button type="button" class="btn-cart btn btn-tertiary position-relative">
                        <i class="fas fa-shopping-cart"></i>
                        <span id="item-count" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger mt-2">0</span>
                        <div class="shopping-cart-list bg-warning d-none">
                            <b class="fs-5 text-white my-3">Sepet</b>
                        </div>
                    </button>
                </form>
            </div>
        </div>
    </nav>
    <!-- Navbar End -->
    <div>
        @RenderBody()
    </div>
    <!-- Footer Start -->
    <footer class="bg-dark text-center text-white" id="info">
        <!-- Grid container -->
        <div class="container p-4 pb-0">
            <!-- Section: Social media -->
            <section class="mb-4">
                <!-- Gmail -->
                <a class="btn btn-outline-light btn-floating m-1"
                   href="#"
                   title="Gmail"
                   role="button">
                    <i class="fa-solid fa-at"></i>
                </a>

                <!-- Twitter -->
                <a class="btn btn-outline-light btn-floating m-1"
                   href="#"
                   title="Twitter"
                   role="button">
                    <i class="fa-brands fa-twitter"></i>
                </a>

                <!-- Instagram -->
                <a class="btn btn-outline-light btn-floating m-1"
                   href="#"
                   title="Instagram"
                   role="button">
                    <i class="fab fa-instagram"></i>
                </a>
            </section>
            <!-- Section: Social media -->
        </div>
        <p>WioShop Sosyal Medya Hesapları.</p>
        <!-- Grid container -->
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
            © 2023 Copyright: WioShop
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer End -->
    <script src="js/script.js"></script>
    <script src="~/Scripts/script.js"></script>
        <script src="https://kit.fontawesome.com/af308b8bf8.js" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js" integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa" crossorigin="anonymous"></script>
</body>
</html>

